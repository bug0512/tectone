<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidhuman="http://schemas.android.com/apk/res-auto"
    android:id="@+id/badgeUpdate_master_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|top"
    android:orientation="vertical"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center|top">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginRight="7dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="165dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/popup_dummy_img_01"
                android:orientation="vertical">
                <!--
                <com.tectone.doubleguard.StyledTextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="101.7dp"
                    android:text="Proximity"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    androidhuman:typeface="FuturaStd-Heavy.ttf" />

                <com.tectone.doubleguard.StyledTextView
                    android:id="@+id/sub_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:text="Sensor"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    androidhuman:typeface="HelveticaLT55Roman.ttf" />
                    -->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_avatar_view"
                android:layout_width="fill_parent"
                android:layout_height="237.3dp"
                android:layout_gravity="center|top"
                android:background="#ffffff"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="237.3dp"
                    android:divider="#ffffff"
                    android:scrollbarSize="1dp"
                    android:scrollbarStyle="outsideInset"
                    android:scrollbarThumbVertical="@drawable/scrollbar_bg"
                    android:scrollbarTrackVertical="@drawable/scrollbar_bg1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/duration_layout"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.tectone.doubleguard.StyledTextView
                                    android:id="@+id/Text1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|top"
                                    android:paddingLeft="14dp"
                                    android:paddingRight="6dp"
                                    android:text="Duration"
                                    android:textColor="#4e4e4e"
                                    android:textSize="16sp"
                                    androidhuman:typeface="HelveticaLT65Medium.ttf" />

                                <com.tectone.doubleguard.StyledTextView
                                    android:id="@+id/Text2"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:paddingRight="14dp"
                                    android:text="01:27:48"
                                    android:textColor="#ed5c77"
                                    android:textSize="24sp"
                                    androidhuman:typeface="FuturaStd-Heavy.ttf" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="1dp"
                                android:layout_marginLeft="14dp"
                                android:layout_marginRight="4dp"
                                android:layout_marginTop="8dp"
                                android:alpha="0.4"
                                android:background="#7d7d7d" />

                            <LinearLayout
                                android:id="@+id/time_layout"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <com.tectone.doubleguard.StyledTextView
                                            android:id="@+id/hour_txt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:text="Hour"
                                            android:textColor="#4e4e4e"
                                            android:textSize="14sp"
                                            androidhuman:typeface="FuturaStd-Heavy.ttf" />

                                        <com.tectone.doubleguard.wheel.WheelView
                                            android:id="@+id/hour"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/hour_txt" />
                                    </RelativeLayout>

                                    <com.tectone.doubleguard.StyledTextView
                                        android:layout_width="27.3dp"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text=":"
                                        android:textColor="#ed5c77"
                                        android:textSize="24sp"
                                        androidhuman:typeface="FuturaStd-Heavy.ttf" />

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <com.tectone.doubleguard.StyledTextView
                                            android:id="@+id/mins_txt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:text="Min"
                                            android:textColor="#4e4e4e"
                                            android:textSize="14sp"
                                            androidhuman:typeface="FuturaStd-Heavy.ttf" />

                                        <com.tectone.doubleguard.wheel.WheelView
                                            android:id="@+id/mins"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/mins_txt" />
                                    </RelativeLayout>

                                    <com.tectone.doubleguard.StyledTextView
                                        android:layout_width="27.3dp"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text=":"
                                        android:textColor="#ed5c77"
                                        android:textSize="24sp"
                                        androidhuman:typeface="FuturaStd-Heavy.ttf" />

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <com.tectone.doubleguard.StyledTextView
                                            android:id="@+id/sec_txt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:text="Sec"
                                            android:textColor="#4e4e4e"
                                            android:textSize="14sp"
                                            androidhuman:typeface="FuturaStd-Heavy.ttf" />

                                        <com.tectone.doubleguard.wheel.WheelView
                                            android:id="@+id/sec"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/sec_txt" />
                                    </RelativeLayout>
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginBottom="1dp"
                                    android:layout_marginLeft="14dp"
                                    android:layout_marginRight="4dp"
                                    android:layout_marginTop="8dp"
                                    android:background="#7d7d7d" />
                            </LinearLayout>
                        </LinearLayout>


                        <!--seekDIV-->
                        <LinearLayout
                            android:id="@+id/seekbar_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.tectone.doubleguard.StyledTextView
                                    android:id="@+id/TextSencitivity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|top"
                                    android:layout_marginTop="8dp"
                                    android:paddingLeft="14dp"
                                    android:paddingRight="6dp"
                                    android:text="Range"
                                    android:textColor="#4e4e4e"
                                    android:textSize="16sp"
                                    androidhuman:typeface="HelveticaLT65Medium.ttf" />

                                <com.tectone.doubleguard.StyledTextView
                                    android:id="@+id/Text22"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:gravity="right"
                                    android:paddingRight="14dp"
                                    android:text="100"
                                    android:textColor="#ed5c77"
                                    android:textSize="24sp"
                                    androidhuman:typeface="FuturaStd-Heavy.ttf" />
                            </LinearLayout>
                            <!-- 구분선 -->

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <SeekBar
                                    android:id="@+id/seekBar"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:max="150"
                                    android:maxHeight="2dp"
                                    android:minHeight="2dp"
                                    android:paddingTop="5dp"
                                    android:progress="75"
                                    android:progressDrawable="@drawable/custom_seekbar"
                                    android:thumb="@drawable/img_progress_point" />

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="1">

                                    <com.tectone.doubleguard.StyledTextView
                                        android:id="@+id/start_value"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginTop="8dp"
                                        android:layout_weight="0.5"
                                        android:paddingLeft="14dp"
                                        android:paddingRight="6dp"
                                        android:text="0%"
                                        android:textColor="#4e4e4e"
                                        android:textSize="16sp"
                                        androidhuman:typeface="HelveticaLT65Medium.ttf" />

                                    <com.tectone.doubleguard.StyledTextView
                                        android:id="@+id/end_value"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:layout_marginTop="8dp"
                                        android:layout_weight="0.5"
                                        android:gravity="right"
                                        android:paddingLeft="14dp"
                                        android:paddingRight="6dp"
                                        android:text="100%"
                                        android:textColor="#4e4e4e"
                                        android:textSize="16sp"
                                        androidhuman:typeface="HelveticaLT65Medium.ttf" />
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginBottom="1dp"
                                    android:layout_marginLeft="14dp"
                                    android:layout_marginRight="4dp"
                                    android:alpha="0.4"
                                    android:background="#7d7d7d" />


                                <!--Auto Duration-->
                                <LinearLayout
                                    android:id="@+id/capture_layout"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="15dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginTop="15dp"
                                    android:background="#ed5c77"
                                    android:gravity="center">

                                    <ImageView
                                        android:id="@+id/capture_img"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="13dp"
                                        android:layout_marginRight="17dp"
                                        android:layout_marginTop="13dp"
                                        android:background="@drawable/popup_btn_ic_capture" />

                                    <com.tectone.doubleguard.StyledTextView
                                        android:id="@+id/capture"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="Capture"
                                        android:textAlignment="center"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:textColor="#ffffff"
                                        android:textSize="20sp"
                                        androidhuman:typeface="FuturaStd-Heavy.ttf" />
                                </LinearLayout>
                                <!--Auto Duration End-->

                            </LinearLayout>

                        </LinearLayout>
                        <!--SeekDIV END-->

                        <LinearLayout
                            android:id="@+id/spinner_layout"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical"
                            android:paddingLeft="14dp"
                            android:paddingRight="14dp">

                            <com.tectone.doubleguard.StyledTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|top"
                                android:layout_marginTop="8dp"
                                android:paddingRight="6dp"
                                android:text="Choose Output"
                                android:textColor="#4e4e4e"
                                android:textSize="16sp"
                                androidhuman:typeface="HelveticaLT65Medium.ttf" />

                            <com.tectone.doubleguard.StyledTextView
                                android:id="@+id/sel_audio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:background="@drawable/popup_downmenu_n"
                                android:paddingBottom="12dp"
                                android:paddingLeft="11dp"
                                android:paddingRight="11dp"
                                android:paddingTop="12dp"
                                android:text="Audio 01"
                                android:textColor="#4e4e4e"
                                android:textSize="18sp"
                                androidhuman:typeface="HelveticaLT55Roman.ttf" />

                            <LinearLayout
                                android:id="@+id/audio_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <com.tectone.doubleguard.StyledTextView
                                    android:id="@+id/output_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#f4f4f4"
                                    android:gravity="center"
                                    android:paddingBottom="14dp"
                                    android:paddingTop="14dp"
                                    android:text="Audio 01"
                                    android:textColor="#4e4e4e"
                                    android:textSize="16sp"
                                    androidhuman:typeface="HelveticaLT55Roman.ttf" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginBottom="1dp"
                                    android:alpha="0.4"
                                    android:background="#7d7d7d" />

                                <com.tectone.doubleguard.StyledTextView
                                    android:id="@+id/output_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#f4f4f4"
                                    android:gravity="center"
                                    android:paddingBottom="14dp"
                                    android:paddingTop="14dp"
                                    android:text="Audio 02"
                                    android:textColor="#4e4e4e"
                                    android:textSize="16sp"
                                    androidhuman:typeface="HelveticaLT55Roman.ttf" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginBottom="1dp"
                                    android:alpha="0.4"
                                    android:background="#7d7d7d" />

                                <com.tectone.doubleguard.StyledTextView
                                    android:id="@+id/output_3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#f4f4f4"
                                    android:gravity="center"
                                    android:paddingBottom="14dp"
                                    android:paddingTop="14dp"
                                    android:text="Audio 03"
                                    android:textColor="#4e4e4e"
                                    android:textSize="16sp"
                                    androidhuman:typeface="HelveticaLT55Roman.ttf" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginBottom="1dp"
                                    android:alpha="0.4"
                                    android:background="#7d7d7d" />

                                <com.tectone.doubleguard.StyledTextView
                                    android:id="@+id/output_4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#f4f4f4"
                                    android:gravity="center"
                                    android:paddingBottom="14dp"
                                    android:paddingTop="14dp"
                                    android:text="Audio 04"
                                    android:textColor="#4e4e4e"
                                    android:textSize="16sp"
                                    androidhuman:typeface="HelveticaLT55Roman.ttf" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginBottom="1dp"
                                    android:alpha="0.4"
                                    android:background="#7d7d7d" />

                                <com.tectone.doubleguard.StyledTextView
                                    android:id="@+id/output_5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#f4f4f4"
                                    android:gravity="center"
                                    android:paddingBottom="14dp"
                                    android:paddingTop="14dp"
                                    android:text="Audio 05"
                                    android:textColor="#4e4e4e"
                                    android:textSize="16sp"
                                    androidhuman:typeface="HelveticaLT55Roman.ttf" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Sensor 내용 -->

                        <com.tectone.doubleguard.StyledTextView
                            android:id="@+id/badgeDesc"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:lineSpacingExtra="6dp"
                            android:paddingBottom="15.3dp"
                            android:paddingLeft="14dp"
                            android:paddingRight="14dp"
                            android:paddingTop="15.3dp"
                            android:text="@string/sensor_desc"
                            android:textAlignment="center"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#4e4e4e"
                            android:textSize="16sp"
                            androidhuman:typeface="HelveticaLT55Roman.ttf" />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <!--
            <LinearLayout
                android:id="@+id/done_layout"
                android:layout_width="fill_parent"
                android:layout_height="53.7dp"
                android:layout_gravity="center|top"
                android:background="#8E3747"
                android:gravity="center" >

                <com.tectone.doubleguard.StyledTextView
                    android:id="@+id/done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:paddingTop="5dp"
                    android:text="Done"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    androidhuman:typeface="FuturaStd-Heavy.ttf" />
            </LinearLayout>
            -->


        </LinearLayout>

        <ImageButton
            android:id="@+id/close_cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:background="@drawable/close_cross" />

    </FrameLayout>


</LinearLayout>